html(ng-app='app')
    head
        title Secret Society
        link(rel='stylesheet' href='styles/styles.css')
    body(ng-controller='MainCtrl')
        div.outer
            div.inner
                h1 Secret Society
                br
                form
                    input(type='email' class='signup-box' placeholder='Your email...' ng-model='signup.email')
                    input(id='submit' type='submit' value='Get Notified' ng-click='addEmail()')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
        script(src='scripts/controllers.js')
